{
  "id": null,
  "uid": "system-metrics",
  "title": "Node Exporter - System Metrics",
  "schemaVersion": 38,
  "version": 1,
  "tags": ["node-exporter", "system", "spark-lab"],
  "timezone": "browser",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m"
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "CPU",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "CPU Usage % (per instance)",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 1},
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "tooltip": {"mode": "single"}
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      }
    },
    {
      "type": "row",
      "title": "Memory",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9}
    },
    {
      "type": "timeseries",
      "title": "Memory Usage %",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "tooltip": {"mode": "single"}
      }
    },
    {
      "type": "timeseries",
      "title": "Memory Used / Total (GB)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / 1024^3",
          "legendFormat": "Used {{instance}}",
          "refId": "A"
        },
        {
          "expr": "node_memory_MemTotal_bytes / 1024^3",
          "legendFormat": "Total {{instance}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "gigabytes"
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "tooltip": {"mode": "single"}
      }
    },
    {
      "type": "row",
      "title": "Disk",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18}
    },
    {
      "type": "timeseries",
      "title": "Disk Usage % (root filesystem)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 19},
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"})) * 100",
          "legendFormat": "{{instance}} /",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "tooltip": {"mode": "single"}
      }
    },
    {
      "type": "timeseries",
      "title": "Disk Read/Write Bytes per Second",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 19},
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[5m])",
          "legendFormat": "read {{instance}} {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[5m])",
          "legendFormat": "write {{instance}} {{device}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "tooltip": {"mode": "single"}
      }
    },
    {
      "type": "row",
      "title": "Network",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 27}
    },
    {
      "type": "timeseries",
      "title": "Network Traffic (bytes/sec)",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo\"}[5m])",
          "legendFormat": "recv {{instance}} {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo\"}[5m])",
          "legendFormat": "sent {{instance}} {{device}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "tooltip": {"mode": "single"}
      }
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  }
}
